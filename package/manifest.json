{
    "manifest_version": 3,
    "name": "ChatGPT Query",
    "description": "Adds the ability to query ChatGPT outside of the website automatically via links with the GET parameter named 'q'.",
    "version": "1.0.4",
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}